<controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:BlockGL"
        xmlns:WPF="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF" x:Name="MainWindow" x:Class="MainWindow"
        mc:Ignorable="d"
        Title="BlockGL" Height="350" Width="525" WindowTitleBrush="#FF007ACE" MinWidth="640" MinHeight="360" BorderThickness="0" SnapsToDevicePixels="True" WindowStartupLocation="CenterScreen" TitlebarHeight="34" >
    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>
            <Button x:Name="BtnNew" Content="NEW" />
            <Button x:Name="BtnLoad" Content="LOAD" />
            <Button x:Name="BtnSave" Content="SAVE" />
            <Button x:Name="BtnConfig" Content="CONFIG" />
            <Button x:Name="BtnAbout" Content="ABOUT" />
        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>
    <Grid>
        <WPF:OpenGLControl x:Name="GlCtrl" FrameRate="60"/>
    </Grid>
</controls:MetroWindow>
